match(this.ctx.data)
    .def()(function() {
    var data = this.ctx.data;
    var controller = data.req.options.controller;

    return applyCtx({
        block: 'page',
        mods: {section: controller === 'admin' ? 'admin' : 'customer'},
        head: [{elem: 'css', url: '/static/css/_merged.css'}],
        title: data.title,
        data: data,
        content: {block: 'page', elem: 'js', url: '/static/js/_merged.js'}
    });
});
