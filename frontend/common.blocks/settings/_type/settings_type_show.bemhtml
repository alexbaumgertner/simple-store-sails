block('settings').mod('type', 'show')(
    def()(function() {
        this.ctx.blockID = this.generateId();

        applyCtx({
            block: 'form',
            data: this.ctx.data,
            method: 'post',
            flashMix: {
                block: 'settings',
                js: {id: this.ctx.blockID}
            },
            content: {
                block: 'settings',
                js: {id: this.ctx.blockID},
                data: this.ctx.data,
                mods: {'type': 'show'},
                content: this.ctx.content
            }
        });
    }),

    tag()('ul'),

    elem('item')(
        tag()('li'),
        content()(function() {

            if (this.ctx.name) {
                return [
                    {
                        block: 'label',
                        id: this.generateId(),
                        content: this.ctx.placeholder
                    },
                    {
                        block: 'input',
                        mods: {theme: 'islands', size: 'm'},
                        id: this.generateId(),
                        val: this.ctx.content,
                        name: this.ctx.name,
                        placeholder: this.ctx.placeholder
                    }
                ];

            } else {
                return this.ctx.content;
            }
        })
    )
);
