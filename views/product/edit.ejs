Product#edit

<form class="product-card-create" action="/product/<%= product.id %>/update" method="post"
      enctype="multipart/form-data">

    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>

    <div class="product-card">
        <div class="product-card__header">Заголовок: <input type="text" name="header" value="<%= product.header %>"/>
        </div>
        <div class="product-card__columns">

            <div class="product-card__column product-card__column_position_left">
                Обложка:
                <% if (product.image) { %>
                <img class="image" src="<%= '/uploads/' + product.image + '?w=170' %>" alt="<%= product.header %>"/>
                <input type="file" name="image" value="<%= product.image %>"/>
                <% } else { %>
                <input type="file" name="image" value="<%= product.image %>"/>
                <% } %>
            </div>

            <div class="product-card__column product-card__column_position_center">

                <div class="product-card__theme">
                    <span class="product-card__property-header">Тема: </span>
          <span class="product-card__property-content"><input type="text" name="theme"
                                                              value="<%= product.theme %>"/></span>
                </div>

                <div class="product-card__annotation">
                    <span class="product-card__property-header">Аннотация: </span>
          <span class="product-card__property-content"><input type="text" name="annotation"
                                                              value="<%= product.annotation %>"/></span>
                </div>

                <div class="product-card__content">
                    <span class="product-card__property-header">Содержание: </span>
            <span class="product-card__property-content">
              <textarea type="text" name="content" style="height: 100px;" value="<%= product.content %>"></textarea>
            </span>
                </div>

                <div class="product-card__isbn">
                    <span class="product-card__property-header">ISBN: </span>
          <span class="product-card__property-content"><input type="text" name="isbn"
                                                              value="<%= product.isbn %>"/></span>
                </div>
                <div class="price product-card__price">
                    <span class="price__value">Цена: <input type="text" name="price"
                                                            value="<%= product.price %>"/></span>
                    <span class="price__currency"> p.</span>
                </div>
                <button class="button button_type_buy button__control product-card__buy i-bem"
                        data-bem="{&quot;button&quot;:{}}" role="button">Сохранить
                </button>
            </div>
            <div class="product-card__column product-card__column_position_right">
                <div class="product-card__balance">Баланс: <input type="text" name="balance"
                                                                  value="<%= product.balance %>"/>
                </div>
            </div>
        </div>

    </div>

</form><!-- /product-card-create -->
