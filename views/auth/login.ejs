<% if (errors) { %>
<% errors.forEach(function (error) { %>
<%= __(error) %>
<% }) %>
<% } %>

<form role="form" action="/auth/local" class="form" method="post">
    <input type="text" name="identifier" class="form-control" placeholder="Username or Email">
    <br/>
    <input type="password" name="password" class="form-control" placeholder="Password">
    <br/>
    <button type="submit" class="btn btn-default">Sign in</button>
</form>

<% if (providers) { %>
<h4>You can also use one of these...</h4>

<% Object.keys(providers).forEach(function (key) { %>
<a href="/auth/<%= providers[key].slug %>" role="button"><%= providers[key].name %></a>
<% }) %>
<% } %>
