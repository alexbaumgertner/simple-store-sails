block('cart-info')(
    content()(function() {
        var cart = this.ctx.data.req.session.cart;
        return [
            {
                elem: 'info',
                content: [
                    'В вашей корзине ',
                    {
                        elem: 'count',
                        value: (cart && cart.quantity) || 0,
                        pluralize: ['товар', 'товара', 'товаров']
                    }
                ]
            },
            {
                elem: 'icon'
            },
            {
                elem: 'order',
                content: 'Оформить заказ',
                url: '/cart/'
            }
        ];
    })
);
