block('product')(
    content()(function() {
            var product = this.ctx.data;

            return [
                {
                    elem: 'image',
                    src: 'img/' + product.image
                },
                {
                    elem: 'title',
                    content: product.title
                },
                {
                    elem: 'info',
                    content: [
                        {
                            elem: 'head',
                            content: product.head
                        },
                        {
                            elem: 'text',
                            content: product.text
                        }
                    ]
                },
                {
                    block: 'link',
                    mix: { block: 'product', elem: 'link' },
                    content: 'Подробнее',
                    url: '/product/' + product.id
                },
                {
                    block: 'price',
                    mix: [{ block: 'product', elem: 'price' }],
                    value: product.price,
                    currency: 'rub'
                },
                {
                    elem: 'buy',
                    content: {
                        block: 'button',
                        mods: {type: 'buy'},
                        content: 'Купить'
                    }
                }
            ];
        }
));
